@page
@model EventPlannerWebApplication.Pages.Musics.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].NumeDj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].PretDj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].DjImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Music) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeDj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PretDj)
            </td>
            <td>
                    <img src="data:image/jpg;base64, @item.DjImage" width="120px" height="120px" />
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
