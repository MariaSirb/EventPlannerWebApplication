@page
@model EventPlannerWebApplication.Pages.Foods.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].DenumireMancare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].PretMancare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].MancareImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Food) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DenumireMancare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PretMancare)
            </td>
            <td>
             <img src="data:image/jpg;base64, @item.MancareImage" width="120px" height="120px" />
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
